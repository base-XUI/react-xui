{
  "name": "@base-xui/react-xui",
  "private": false,
  "version": "0.2.0",
  "description": "React XUI Component Library",
  "main": "./dist/umd/react-xui.umd.js",
  "module": "./dist/es/src/index.js",
  "types": "./dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/es/src/index.js",
      "require": "./dist/umd/react-xui.umd.js"
    },
    "./style.css": "./dist/style.css"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/base-XUI/react-xui.git"
  },
  "changelog": [
    "@changesets/changelog-github",
    {
      "repo": "base-XUI/react-xui"
    }
  ],
  "scripts": {
    "build:package": "pnpm clean && tsc -p tsconfig.build.json && vite build && pnpm build:css --mode package",
    "build:storybook": "storybook build",
    "build:css": "pnpm dlx @tailwindcss/cli -i lib/src/main.css -o dist/styles.css --minify",
    "storybook": "storybook dev -p 6006",
    "release": "pnpm build:package && changeset publish",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "lint": "eslint .",
    "format": "prettier --write .",
    "clean": "rimraf dist",
    "test": "cypress run --component",
    "test:watch": "cypress open --component",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:ci": "cypress run --component",
    "prepublishOnly": "pnpm lint && pnpm test:ci && pnpm build:package"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.0.14",
    "@tailwindcss/vite": "^4.0.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^4.0.6",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "@chromatic-com/storybook": "3.2.4",
    "@commitlint/cli": "^19.2.0",
    "@commitlint/config-conventional": "^19.1.0",
    "@cypress/vite-dev-server": "^6.0.3",
    "@eslint/js": "^9.19.0",
    "@storybook/addon-essentials": "8.5.4",
    "@storybook/blocks": "8.5.4",
    "@storybook/react": "8.5.4",
    "@storybook/react-vite": "8.5.4",
    "@storybook/test": "8.5.4",
    "@testing-library/react": "^16.2.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^22.12.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "cypress": "^14.3.1",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "eslint-plugin-storybook": "^0.11.2",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "hygen": "^6.2.11",
    "lint-staged": "^15.2.2",
    "prettier": "3.5.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "react-router-dom": "^7.2.0",
    "rimraf": "^5.0.10",
    "storybook": "8.5.4",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.0",
    "vite-plugin-lib-inject-css": "^2.2.1",
    "yalc": "^1.0.0-pre.53"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.cy.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ],
    "**/*": "prettier --write --ignore-unknown"
  }
}
