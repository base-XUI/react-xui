{
  "name": "react-xui",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "main": "dist/ui-kit.umd.js",
  "module": "dist/ui-kit.mjs",
  "types": "dist/main.d.ts",
  "exports": {
    ".": {
      "types": "./dist/main.d.ts",
      "import": "./dist/ui-kit.mjs",
      "require": "./dist/ui-kit.umd.js"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "prepare": "husky",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "npm run build && changeset publish",
    "format": "prettier --write ."
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.0.6",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.1",
    "tailwindcss": "^4.0.6"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@chromatic-com/storybook": "3.2.4",
    "@commitlint/cli": "^19.2.0",
    "@commitlint/config-conventional": "^19.1.0",
    "@eslint/js": "^9.19.0",
    "@storybook/addon-essentials": "8.5.4",
    "@storybook/addon-interactions": "8.5.4",
    "@storybook/addon-onboarding": "8.5.4",
    "@storybook/blocks": "8.5.4",
    "@storybook/react": "8.5.4",
    "@storybook/react-vite": "8.5.4",
    "@storybook/test": "8.5.4",
    "@types/node": "^22.12.0",
    "@types/react": "^19.0.8",
    "@types/react-dom": "^19.0.3",
    "@vitejs/plugin-react": "^4.3.4",
    "eslint": "^9.19.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.18",
    "eslint-plugin-storybook": "^0.11.2",
    "globals": "^15.14.0",
    "husky": "^9.1.7",
    "hygen": "^6.2.11",
    "lint-staged": "^15.2.2",
    "prettier": "3.5.1",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "storybook": "8.5.4",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.1.0",
    "vite-plugin-dts": "^4.5.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ],
    "**/*": "prettier --write --ignore-unknown"
  }
}
